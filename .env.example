# Приложение
APP_PORT=3000
APP_HOST=localhost
APP_ENV=development
APP_SECRET=your-secret-key
APP_TIMEZONE=Europe/Moscow

# База данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=force_sender
DB_USER=postgres
DB_PASSWORD=your-password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=force_sender:

# RuSender API
RUSENDER_API_KEY=your-api-key

# Загрузка файлов
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
UPLOAD_TEMP_DIR=uploads/temp
UPLOAD_FINAL_DIR=uploads/final

# Безопасность
PASSWORD_SALT_ROUNDS=10
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=24h
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Мониторинг
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Логирование
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILENAME=logs/app.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# Email
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com
EMAIL_TEMPLATES_DIR=templates/email 